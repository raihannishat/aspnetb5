@model CreateStockModel
@{
    ViewData["Title"] = "Create";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Create a new Stock</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Create Stock</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section>
    <!-- Horizontal Form -->
    <div class="col-md-12">
        <div class="card card-info">
            <div class="card-header">
                <h3 class="card-title">Create a new Stock</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form class="form-horizontal" method="post" asp-controller="Stock" asp-action="Create" asp-antiforgery="true">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="card-body">
                    <div class="form-group row">
                        <label asp-for="ProductId" class="col-sm-2 col-form-label">Product ID</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" asp-for="ProductId" id="productid" placeholder="ProductId">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Quantity" class="col-sm-2 col-form-label">Quantity</label>
                        <div class="col-sm-10">
                            <input type="number" asp-for="Quantity" class="form-control" id="quantity" placeholder="Quantity">
                        </div>
                    </div>
                </div>
                <!-- /.card-body -->
                <div class="card-footer">
                    <button type="submit" class="btn btn-info">Create</button>
                    <a asp-controller="Stock" asp-action="Index" class="btn btn-default float-right">Cancel</a>
                </div>
                <!-- /.card-footer -->
            </form>
        </div>
    </div>
</section>